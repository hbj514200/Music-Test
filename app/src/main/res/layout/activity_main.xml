<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    android:id="@+id/layout_main" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/kill"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:background="@drawable/back_1"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="12dp"
            />

        <ImageView
            android:id="@+id/signUp"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/signup"
            />

        <Button
            android:id="@+id/aboutme"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/aboutme_1"
            />
    </LinearLayout>


    <TextView
        android:textColor="#FFFFFF"
        android:text="钟无艳"
        android:layout_marginTop="0dp"
        android:textSize="26sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="141dp"
        />

    <TextView
        android:text="谢安琪"
        android:textColor="#eae9e9"
        android:layout_marginTop="1dp"
        android:textSize="15sp"
        android:layout_marginLeft="158dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/touxiang"
        android:background="@drawable/touxiang"
        android:layout_width="113dp"
        android:layout_height="113dp"
        android:layout_gravity="center"
        android:layout_marginTop="58dp"
        android:layout_marginLeft="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp" >


        <Button
            android:id="@+id/play"
            android:layout_width="100dp"
            android:layout_height="43dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/start_2"
            />
        <Button
            android:id="@+id/pause"
            android:layout_width="100dp"
            android:layout_height="43dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/pause_2"
            />
        <Button
            android:id="@+id/stop"
            android:layout_width="100dp"
            android:layout_height="43dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/stop_2"
            android:layout_marginLeft="14dp"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/singer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/singer"
        android:visibility="gone"
        />

    <HorizontalScrollView
        android:id="@+id/henlist"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbars="none"
        android:layout_marginTop="10dp" >

        <LinearLayout android:id="@+id/LinearLayout02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp" >

            <ImageView
                android:layout_width="112dp" android:layout_height="112dp" android:layout_marginLeft="7dp"
                android:src="@drawable/pan1" />
            <ImageView
                android:layout_width="112dp" android:layout_height="112dp" android:layout_marginLeft="7dp"
                android:src="@drawable/pan2" />
            <ImageView
                android:layout_width="112dp" android:layout_height="112dp" android:layout_marginLeft="7dp"
                android:src="@drawable/pan3" />
            <ImageView
                android:layout_width="112dp" android:layout_height="112dp" android:layout_marginLeft="7dp"
                android:src="@drawable/pan4" />
            <ImageView
                android:layout_width="112dp" android:layout_height="112dp" android:layout_marginLeft="7dp"
                android:src="@drawable/pan5" />
            <ImageView
                android:layout_width="112dp" android:layout_height="112dp" android:layout_marginLeft="7dp"
                android:src="@drawable/pan6" />

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
