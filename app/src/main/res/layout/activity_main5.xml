<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back_da"
    android:id="@+id/layout_main" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/kill"
            android:layout_width="107dp"
            android:layout_height="43dp"
            android:background="@drawable/back_1"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="12dp"
            />

        <ImageView
            android:id="@+id/signUp"
            android:layout_width="106dp"
            android:layout_height="53dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/signup"
            />

        <Button
            android:id="@+id/aboutme"
            android:layout_width="108dp"
            android:layout_height="43dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/aboutme_1"
            />
    </LinearLayout>


    <TextView
        android:textColor="#FFFFFF"
        android:text="钟无艳"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        />

    <TextView
        android:text="谢安琪"
        android:textColor="#eae9e9"
        android:textSize="13sp"
        android:layout_marginLeft="140dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/touxiang"
        android:background="@drawable/touxiang"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_gravity="center"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp" >


        <Button
            android:id="@+id/play"
            android:layout_width="94dp"
            android:layout_height="39dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/start_2"
            />
        <Button
            android:id="@+id/pause"
            android:layout_width="94dp"
            android:layout_height="39dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/pause_2"
            />
        <Button
            android:id="@+id/stop"
            android:layout_width="94dp"
            android:layout_height="39dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/stop_2"
            android:layout_marginLeft="12dp"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/singer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/singer"
        android:visibility="gone"
        />

    <HorizontalScrollView
        android:id="@+id/henlist"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbars="none"
        android:layout_marginTop="4dp" >

        <LinearLayout android:id="@+id/LinearLayout02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" >

            <ImageView
                android:layout_width="102dp" android:layout_height="102dp" android:layout_marginLeft="6dp"
                android:src="@drawable/pan1" />
            <ImageView
                android:layout_width="102dp" android:layout_height="102dp" android:layout_marginLeft="6dp"
                android:src="@drawable/pan2" />
            <ImageView
                android:layout_width="102dp" android:layout_height="102dp" android:layout_marginLeft="6dp"
                android:src="@drawable/pan3" />
            <ImageView
                android:layout_width="102dp" android:layout_height="102dp" android:layout_marginLeft="6dp"
                android:src="@drawable/pan4" />
            <ImageView
                android:layout_width="102dp" android:layout_height="102dp" android:layout_marginLeft="6dp"
                android:src="@drawable/pan5" />
            <ImageView
                android:layout_width="102dp" android:layout_height="102dp" android:layout_marginLeft="6dp"
                android:src="@drawable/pan6" />

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
